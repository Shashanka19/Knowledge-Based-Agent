# ===========================================
# KNOWLEDGEBASE AGENT ENVIRONMENT VARIABLES
# ===========================================

# AI Model Configuration
# Choose your preferred model provider: openai, claude, or gemini
MODEL_PROVIDER=openai
MODEL_NAME=gpt-3.5-turbo
MODEL_TEMPERATURE=0.0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude Configuration (if using Claude)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini Configuration (if using Gemini)
# GOOGLE_API_KEY=your_google_api_key_here

# Vector Store Configuration
# Choose: pinecone or chromadb
VECTOR_STORE_TYPE=chromadb

# Pinecone Configuration (if using Pinecone)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=us-east1-gcp
# PINECONE_INDEX_NAME=knowledgebase

# ChromaDB Configuration (if using ChromaDB)
CHROMA_COLLECTION_NAME=knowledgebase
CHROMA_PERSIST_DIR=./data/chroma_db

# Metadata Database Configuration
# Choose: firebase or local
METADATA_DB_TYPE=local

# Firebase Configuration (if using Firebase)
# FIREBASE_PROJECT_ID=your_firebase_project_id
# FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/your/firebase-service-account.json

# Local Storage Configuration (if using local storage)
LOCAL_DATA_DIR=./data

# Application Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Logging Configuration
LOG_LEVEL=INFO